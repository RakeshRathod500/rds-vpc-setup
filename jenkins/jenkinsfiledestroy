pipeline {
  agent any

  environment {
    AWS_DEFAULT_REGION = 'ap-south-1'
    TF_VARS_FILE = 'terraform.tfvars'
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main',
            url: 'https://github.com/RakeshRathod500/rds-vpc-setup.git'
      }
    }

    stage('Terraform Init') {
      steps {
        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
          sh 'terraform init'
        }
      }
    }

    stage('Terraform Plan Destroy') {
      steps {
        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
          sh 'terraform plan -destroy -var-file=${TF_VARS_FILE} -out=tfdestroy'
        }
      }
    }

    stage('Terraform Destroy') {
      steps {
        input message: "⚠️ Are you sure you want to destroy all resources?"
        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
          sh 'terraform apply -auto-approve tfdestroy'
        }
      }
    }
  }

  post {
    success {
      echo "✅ Terraform destroy completed!"
    }
    failure {
      echo "❌ Destroy pipeline failed. Check logs."
    }
  }
}
