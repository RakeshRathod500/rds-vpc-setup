pipeline {
  agent any

  environment {
    AWS_DEFAULT_REGION = 'ap-south-1'
    TF_VARS_FILE = 'terraform/dev.tfvars'
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/RakeshRathod500/rds-vpc-setup.git'
      }
    }

    stage('Terraform Init') {
      steps {
        script {
          withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-cred-id']]) {
            sh '''
              echo "✅ Running Terraform Init..."
              terraform init -backend-config="region=${AWS_DEFAULT_REGION}"
            '''
          }
        }
      }
    }

    stage('Terraform Validate') {
      steps {
        sh '''
          echo "✅ Validating Terraform..."
          terraform validate
        '''
      }
    }

    stage('Terraform Plan') {
      steps {
        sh '''
          echo "✅ Running Terraform Plan..."
          terraform plan -var-file=${TF_VARS_FILE} -out=tfplan
        '''
      }
    }

    stage('Terraform Apply') {
      steps {
        input message: "Proceed with Terraform Apply?"
        sh '''
          echo "🚀 Applying Terraform..."
          terraform apply -auto-approve tfplan
        '''
      }
    }
  }

  post {
    failure {
      echo "❌ Pipeline failed. Check logs."
    }
    success {
      echo "🎉 Terraform Deployment Finished Successfully!"
    }
  }
}
